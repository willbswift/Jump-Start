<h1>Burgers!</h1>
<div class="container">
  <div class="row">
    <div class="col-lg-6">

      <div class="card">
        <h3 class="card-header">Burgers that are not devoured!</h3>

        <div class="card-body">

          <ul>
            {{#each burgers}} {{#unless devoured}}
            <li>
              {{burger_name}}

              <button class="change-devour btn btn-secondary" data-id="{{id}}" data-newdevour="true">
                DEVOURED!
              </button>
              <button class="delete btn btn-danger" data-id="{{id}}">delete</button>
            </li>
            {{/unless}} {{/each}}
          </ul>
        </div>
      </div>
    </div>
    <div class="col-lg-6">
      <div class="card">
        <h3 class="card-header">Burgers that are devoured!</h3>

        <div class="card-body">
          <ul>
            {{#each burgers}} {{#if devoured}}
            <li>
              {{burger_name}}

              <button class="change-devour btn btn-secondary" data-id="{{id}}" data-newdevour="false">
                AVAILABLE!
              </button>
              <button class="delete btn btn-danger " data-id="{{id}}">delete</button>
            </li>
            {{/if}} {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">

      <div class="card">
        <h3 class="card-header">Add A Burger</h3>

        <div class="card-body">
          <form class="create-form">

            <div class="form-group">
              <label for="ca">Burger Name:</label>
              <input type="text" id="ca" name="name">
            </div>

            <div class="form-group">
              <label for="slee">Devoured?</label><br>
              <input type="radio" name="devoured" value="1" checked> Devoured!<br>
              <input type="radio" name="devoured" value="0"> Available <br>
            </div>

            <button class="btn btn-primary" type="submit">Add Burger</button>
          </form>
        </div>
      </div>


    </div>
  </div>